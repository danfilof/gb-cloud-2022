<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="673.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloud.controllers.MainController">

   <HBox fx:id="loginBox" visible="true" VBox.vgrow="ALWAYS">
      <TextField fx:id="loginField" visible="true" promptText="Login" />
      <PasswordField fx:id="passwordField" visible="true" promptText="Password" />
      <Button fx:id="AuthButton" defaultButton="true" visible="true" onAction="#btnAuthClick" text="Auth" />
   </HBox>

    <ListView fx:id="serverView" layoutX="607.0" layoutY="87.0" prefHeight="468.0" prefWidth="410.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
    </ListView>
   <Button fx:id="uploadButton" layoutX="448.0" layoutY="112.0" mnemonicParsing="false" onAction="#upload" prefHeight="61.0" prefWidth="135.0" text="Upload" textFill="#04f500b5" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font size="16.0" />
      </font>
   </Button>
   <Button fx:id="deleteButton" layoutX="448.0" layoutY="451.0" mnemonicParsing="false" onAction="#delete" prefHeight="61.0" prefWidth="135.0" text="Delete" textFill="#d11111d8" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="System Bold" size="16.0" />
      </font>
   </Button>
   <Button fx:id="downloadButton" layoutX="448.0" layoutY="233.0" mnemonicParsing="false" onAction="#download" prefHeight="61.0" prefWidth="135.0" text="Download" textFill="#038ef2" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font size="16.0" />
      </font>
   </Button>
   <ListView fx:id="clientView" layoutX="14.0" layoutY="87.0" prefHeight="468.0" prefWidth="410.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </ListView>
</AnchorPane>
