<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="673.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloud.controllers.MainController">

   <TextField fx:id="clientTextArea" alignment="CENTER" layoutX="113.0" layoutY="67.0" prefHeight="20.0" prefWidth="80.0" text="Local Drive" visible="false">
      <font>
         <Font name="Californian FB Bold" size="10.0" />
      </font></TextField>

   <TextField fx:id="serverTextArea" alignment="CENTER" layoutX="582.0" layoutY="68.0" prefHeight="20.0" prefWidth="80.0" text="Server Drive" visible="false">
      <font>
         <Font name="Californian FB" size="10.0" />
      </font></TextField>

   <TextField fx:id="welcomeField" layoutX="20.0" layoutY="30.0" text="Welcome, " visible="false">
      <font>
         <Font name="Californian FB Bold" size="11.0" />
      </font></TextField>

   <HBox fx:id="loginBox" prefHeight="162.0" prefWidth="523.0" visible="true" VBox.vgrow="ALWAYS">
      <TextField fx:id="loginField" promptText="Login" visible="true" />
      <PasswordField fx:id="passwordField" promptText="Password" visible="true" />
      <Button fx:id="AuthButton" defaultButton="true" onAction="#btnAuthClick" text="Auth" visible="true" />
      <Button fx:id="cancelAuthButton" layoutX="340.0" mnemonicParsing="false" onAction="#cancelAuthClick" text="Cancel" visible="true" />
   </HBox>

   <StackPane fx:id="createNewFolderPane" alignment="TOP_RIGHT" layoutX="370.0" layoutY="281.0" visible="false">
      <TextField fx:id="newFolderNameField" prefHeight="25.0" prefWidth="292.0" promptText="New folder name" visible="true" />
      <Button fx:id="confirmNewFolderButton" defaultButton="true" layoutX="5.0" onAction="#confirmFolderNameChange" text="Confirm" visible="true" />
   </StackPane>

   <StackPane fx:id="changeFileNamePane" alignment="TOP_RIGHT" layoutX="426.0" layoutY="281.0" prefHeight="25.0" prefWidth="180.0" visible="false">
      <TextField fx:id="newFileNameField" promptText="New file name" visible="true" />
      <Button fx:id="confirmFileNameChangeButton" defaultButton="true" onAction="#confirmFileNameChange" text="Confirm" visible="true" />
   </StackPane>

   <ImageView fx:id="failedAuthImage" fitHeight="130.0" fitWidth="130.0" layoutX="30.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" visible="false" />
   <TextArea fx:id="failedAuthMessage" layoutX="2.0" layoutY="162.0" prefHeight="25.0" prefWidth="434.0" text="Something went wrong. Probably wrong login or  password. Please try again." visible="false" />


   <ListView fx:id="serverView" layoutX="583.0" layoutY="87.0" onMouseClicked="#openServerDirectories" onMouseEntered="#dropSelectionOnClientList" prefHeight="476.0" prefWidth="354.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <contextMenu>
         <ContextMenu fx:id="serverCM">
            <items>
               <MenuItem fx:id="MIDOWNLOAD" onAction="#download" text="Download" />
               <MenuItem fx:id="MIRENAME" onAction="#rename" text="Rename" />
               <MenuItem fx:id="MICREATEFOLDER" onAction="#createNewFolder" text="Create Folder" />
               <MenuItem fx:id="MIMOVE" onAction="#move" text="Move" />
               <MenuItem fx:id="MIMOVEHERE" onAction="#moveHere" text="Move here" />
               <MenuItem fx:id="MIDELETE" onAction="#delete" text="Remove" />
            </items>
         </ContextMenu>
      </contextMenu>
   </ListView>

   <ListView fx:id="clientView" layoutX="114.0" layoutY="87.0" onMouseClicked="#openClientDirectories" onMouseEntered="#dropSelectionOnServerList" prefHeight="476.0" prefWidth="354.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <contextMenu>
         <ContextMenu fx:id="localCM">
            <items>
               <MenuItem fx:id="MIUpload" onAction="#upload" text="Upload" />
               <MenuItem fx:id="MIRename" onAction="#rename" text="Rename" />
               <MenuItem fx:id="MINewFolder" onAction="#createNewFolder" text="Create Folder" />
               <MenuItem fx:id="MIMove" onAction="#move" text="Move" />
               <MenuItem fx:id="MIMoveHere" onAction="#moveHere" text="Move here" />
               <MenuItem fx:id="MIDelete" onAction="#delete" text="Remove" />

            </items>
         </ContextMenu>
      </contextMenu>
   </ListView>
   <Button fx:id="buttonBACK" layoutX="365.0" layoutY="60.0" mnemonicParsing="false" onAction="#buttonBACK" text="Return" visible="false" />
   <Button fx:id="buttonBACKServer" layoutX="835.0" layoutY="60.0" mnemonicParsing="false" onAction="#buttonBACKServer" text="Return" visible="false" />
</AnchorPane>
