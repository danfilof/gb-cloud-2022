<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="673.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloud.controllers.MainController">

   <HBox fx:id="loginBox" prefHeight="162.0" prefWidth="523.0" visible="true" VBox.vgrow="ALWAYS">
      <TextField fx:id="loginField" promptText="Login" visible="true" />
      <PasswordField fx:id="passwordField" promptText="Password" visible="true" />
      <Button fx:id="AuthButton" defaultButton="true" onAction="#btnAuthClick" text="Auth" visible="true" />
      <Button fx:id="cancelAuthButton" layoutX="340.0" mnemonicParsing="false" onAction="#cancelAuthClick" text="Cancel" visible="true" />
   </HBox>

   <HBox fx:id="fileNameChangeBox" layoutX="410.0" layoutY="380.0" prefHeight="53.0" prefWidth="226.0" visible="false">
      <TextField fx:id="newFileNameField" promptText="New file name" visible="true" />
      <Button fx:id="confirmFileNameChangeButton" defaultButton="true" onAction="#confirmFileNameChange" text="Confirm" visible="true" />
   </HBox>

      <ImageView fx:id="failedAuthImage" fitHeight="130.0" fitWidth="130.0" layoutX="30.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" visible="false" />
   <TextArea fx:id="failedAuthMessage" layoutX="2.0" layoutY="162.0" prefHeight="25.0" prefWidth="434.0" text="Something went wrong. Probably wrong login or  password. Please try again." visible="false" />


    <ListView fx:id="serverView" layoutX="683.0" layoutY="87.0" onMouseClicked="#openServerDirectories" onMouseEntered="#dropSelectionOnClientList" prefHeight="456.0" prefWidth="334.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
    </ListView>
   <Button fx:id="uploadButton" layoutX="422.0" layoutY="90.0" mnemonicParsing="false" onAction="#upload" prefHeight="61.0" prefWidth="187.0" text="Upload" textFill="#04f500b5" textOverrun="CLIP" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <Button fx:id="deleteButton" layoutX="422.0" layoutY="446.0" mnemonicParsing="false" onAction="#delete" prefHeight="61.0" prefWidth="187.0" text="Delete" textFill="#d11111d8" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="downloadButton" layoutX="422.0" layoutY="181.0" mnemonicParsing="false" onAction="#download" prefHeight="61.0" prefWidth="187.0" text="Download" textFill="#038ef2" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <Button fx:id="renameButton" layoutX="422.0" layoutY="285.0" mnemonicParsing="false" onAction="#rename" prefHeight="61.0" prefWidth="187.0" text="Rename" textFill="#ffaa00" visible="false">
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <ListView fx:id="clientView" layoutX="14.0" layoutY="87.0" onMouseClicked="#openClientDirectories" onMouseEntered="#dropSelectionOnServerList" prefHeight="456.0" prefWidth="334.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </ListView>
   <Button fx:id="buttonBACK" layoutX="15.0" layoutY="60.0" mnemonicParsing="false" onAction="#buttonBACK" text="ButtonBACK" visible="false" />
   <Button fx:id="buttonBACKServer" layoutX="935.0" layoutY="60.0" mnemonicParsing="false" onAction="#buttonBACKServer" text="ButtonBACK" visible="false" />
</AnchorPane>
