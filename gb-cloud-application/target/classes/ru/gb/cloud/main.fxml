<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="mainAnchorPane" prefHeight="673.0" prefWidth="1031.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ru.gb.cloud.controllers.MainController">

   <HBox fx:id="loginBox" prefHeight="162.0" prefWidth="523.0" visible="true" VBox.vgrow="ALWAYS">
      <TextField fx:id="loginField" promptText="Login" visible="true" />
      <PasswordField fx:id="passwordField" promptText="Password" visible="true" />
      <Button fx:id="AuthButton" defaultButton="true" onAction="#btnAuthClick" text="Auth" visible="true" />
      <Button fx:id="cancelAuthButton" layoutX="340.0" mnemonicParsing="false" onAction="#cancelAuthClick" text="Cancel" visible="true" />
   </HBox>

   <HBox fx:id="fileNameChangeBox" layoutX="632.0" layoutY="14.0" prefHeight="53.0" prefWidth="226.0" visible="false">
      <TextField fx:id="newFileNameField" promptText="New file name" visible="true" />
      <Button fx:id="confirmFileNameChangeButton" defaultButton="true" onAction="#confirmFileNameChange" text="Confirm" visible="true" />
   </HBox>

      <ImageView fx:id="failedAuthImage" fitHeight="130.0" fitWidth="130.0" layoutX="30.0" layoutY="25.0" pickOnBounds="true" preserveRatio="true" visible="false" />
   <TextArea fx:id="failedAuthMessage" layoutX="2.0" layoutY="162.0" prefHeight="25.0" prefWidth="434.0" text="Something went wrong. Probably wrong login or  password. Please try again." visible="false" />


    <ListView fx:id="serverView" layoutX="544.0" layoutY="87.0" onMouseEntered="#dropSelectionOnClientList" prefHeight="468.0" prefWidth="473.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
    </ListView>
   <Button fx:id="uploadButton" layoutX="64.0" layoutY="582.0" mnemonicParsing="false" onAction="#upload" prefHeight="61.0" prefWidth="187.0" text="Upload" textFill="#04f500b5" textOverrun="CLIP" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <Button fx:id="deleteButton" layoutX="781.0" layoutY="582.0" mnemonicParsing="false" onAction="#delete" prefHeight="61.0" prefWidth="187.0" text="Delete" textFill="#d11111d8" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI Bold" size="18.0" />
      </font>
   </Button>
   <Button fx:id="downloadButton" layoutX="301.0" layoutY="582.0" mnemonicParsing="false" onAction="#download" prefHeight="61.0" prefWidth="187.0" text="Download" textFill="#038ef2" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <Button fx:id="renameButton" layoutX="544.0" layoutY="582.0" mnemonicParsing="false" onAction="#rename" prefHeight="61.0" prefWidth="187.0" text="Rename" textFill="#ffaa00" visible="false">
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
   </Button>
   <ListView fx:id="clientView" layoutX="14.0" layoutY="87.0" onMouseClicked="#openDirectories" onMouseEntered="#dropSelectionOnServerList" prefHeight="468.0" prefWidth="473.0" visible="false">
      <cursor>
         <Cursor fx:constant="HAND" />
      </cursor>
   </ListView>
   <Button fx:id="buttonIN" layoutX="507.0" layoutY="25.0" mnemonicParsing="false" onAction="#buttonBACK" text="ButtonBACK" />
   <Button fx:id="buttonOUT" layoutX="620.0" layoutY="25.0" mnemonicParsing="false" onAction="#buttonOUT" text="ButtonHOME" />
</AnchorPane>
